# Lock screen
# i3lock
bindsym $mod+Ctrl+l exec i3lock -i .i3/tmp/lockscreen.png default -d -n
# gnome-screen-saver
#bindsym $mod+Ctrl+l exec gnome-screensaver-command --lock

# sleep & suspend
# http://ubuntuforums.org/showthread.php?t=1857940
# #6
# sleep & suspend
# http://ubuntuforums.org/showthread.php?t=1857940 #6
bindsym XF86Sleep exec i3lock -i .i3/tmp/lockscreen.png && dbus-send --system --print-reply --dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Suspend
bindsym XF86PowerOff exec i3lock -i .i3/tmp/lockscreen.png && dbus-send --system --print-reply --dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Suspend


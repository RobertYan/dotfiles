// Place your settings in this file to overwrite the default settings
// ~/Library/Application Support/Code/User/settings.json
{
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.scrollbar.verticalScrollbarSize": 2,
  "editor.formatOnSave": true,
  // "vim.disableAnnoyingNeovimMessage": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["Z", "Z"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    }
  ],
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.leader": ",",
  "vim.easymotion": true,
  "vim.useCtrlKeys": true,
  "vim.surround": true,
  "vim.hlsearch": true,
  "python.pythonPath": "/usr/local/miniconda3/bin/python",
  "workbench.statusBar.feedback.visible": false,
  "explorer.confirmDelete": false,
  "eslint.autoFixOnSave": false,
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "relative",
  "workbench.startupEditor": "none",
  "javascript.validate.enable": true,
  // "flow.useNPMPackagedFlow": false,
  // "flow.pathToFlow": "${workspaceRoot}/node_modules/.bin/flow",
  "eslint.packageManager": "yarn",
  "files.associations": {
    "*.js": "javascript"
  },
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "editor.fontWeight": "500",
  "workbench.iconTheme": null,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorStyle": "line",
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "prettier.singleQuote": true,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "editor.hideCursorInOverviewRuler": true,
  "workbench.editor.showIcons": false,
  "explorer.openEditors.visible": 0,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "gutter",
  "window.zoomLevel": 0,
  "editor.fontSize": 12,
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  "python.linting.enabled": true,
  "files.autoGuessEncoding": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.useLanguageServer": true,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "breadcrumbs.enabled": false,
  "editor.renderControlCharacters": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown-pdf.executablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
  "markdown-pdf.margin.bottom": "1px",
  "markdown-pdf.displayHeaderFooter": false
}
